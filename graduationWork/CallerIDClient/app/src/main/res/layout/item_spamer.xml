<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:context="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="6dp"
        android:scaleType="fitXY"
        context:srcCompat="@drawable/outline_phone_disabled_black_24" />

    <TextView
        android:id="@+id/tvSpamerPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_toEndOf="@id/imageView"
        android:fontFamily="@font/roboto_mono_thin"
        android:maxLines="1"
        android:text="88005553535"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvSpamerDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSpamerPhone"
        android:layout_toEndOf="@id/imageView"
        android:fontFamily="@font/roboto_mono_thin"
        android:maxLines="2"
        android:text="Лучше позвонить, чем у кого-то занимать"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp" />
</RelativeLayout>